@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    <div class="cheepbox">
        <h3>What's on your mind @(User.Identity.Name)?</h3>
        <form method="post">
            <input style="float: left" type="text" asp-for="newCheep.Message">
            <input type="submit" value="Share">
        </form>
    </div>

    @if (Model.Cheeps.Count > 0)
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.author">@cheep.author</a>
                        </strong>
                        @cheep.message
                        <small>&mdash; @cheep.timestamp</small>
                    </p>
                </li>
            }
        </ul>

        <!-- Pagination links (horizontal-list)-->
        <nav aria-label="Cheep Pagination">
            <div class="pagination justify-content-center">
                <span class="page-item">
                    <a class="page-link"
                        href="/?pageNumber=@(Model.PageNumber - 1 > 0 ? Model.PageNumber - 1 : Model.PageNumber)">&lt;</a>
                </span>
                @for (var i = 1; i <= Math.Ceiling((double)Model.TotalCheeps / Model.CheepsPerPage); i++)
                {
                    <span class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="/?pageNumber=@i">@i</a>
                    </span>
                }
                <span class="page-item">
                    <a class="page-link"
                        href="/?pageNumber=@(Model.PageNumber + 1 <= Math.Ceiling((double)Model.TotalCheeps / Model.CheepsPerPage) ? Model.PageNumber + 1 : Model.PageNumber)">&gt;</a>
                </span>
            </div>
        </nav>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
