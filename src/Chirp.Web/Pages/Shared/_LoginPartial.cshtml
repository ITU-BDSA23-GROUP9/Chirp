@using Microsoft.AspNetCore.Identity
@using Chirp.Infrastructure

@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="form-group" style="display: horizontal;">
            <button class="form-group">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"
                    title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </button>
            <button class="form-group">
                <a id="UserInformation" class="nav-link text-dark" href="/UserInformation">
                About me</a>
            </button>
            <a id="logoutForm" class="form-group" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0 form-group" style="display: horizontal;">
                    Logout
                </button>
            </a>
        </div>
    }
    else
    {
        <div class="nav-item">
            <button>
                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </button>
            <button>
                <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </button>
        </div>
    }
</ul>
