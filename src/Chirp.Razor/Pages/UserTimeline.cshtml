@page "/{author}"
@model Chirp.Razor.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

<div>
    <h2> @routeName's Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.author">@cheep.author</a>
                        </strong>
                        @cheep.message
                        <small>&mdash; @cheep.timestamp</small>
                    </p>
                </li>
            }
        </ul>

            <!-- Pagination links (horizontal) -->
            <nav aria-label="Cheep Pagination">
            <ul class="pagination justify-content-center">
                @for (var i = 1; i <= Math.Ceiling((double)Model.TotalCheeps / Model.CheepsPerPage); i++)
                {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="/@routeName?pageNumber=@i">Page @i</a>
                            </li>
                }
                </ul>
            </nav>

    }
    else
    {
            <em>There are no cheeps so far.</em>
    }
</div>
